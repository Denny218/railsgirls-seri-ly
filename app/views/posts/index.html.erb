<p id="notice"><%= notice %></p>

<h1 style="color: red"> Všechny seriály </h1>
<form action="/posts/">
   Vyhledat: 
    <input type=text size=16 name="nazev">
    <input type=submit value=odeslat>
</form>
<table>
  <thead>
    <tr>
      <th>              </th>
      <th>Název seriálu</th>
      <th>Popis</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% poradi=1 %>
    <% @posts.each do |post| %>
      <tr>
      <td> <%=poradi %> </td>
        <td>  <%= post.name.upcase %></td>
        <td><%= post.description %></td>
        <td><%= image_tag(post.picture_url, width: 600) if post.picture.present? %></td>
        <td><%= link_to 'Ukázat', post %></td>
        <td><%= link_to 'Upravit', edit_post_path(post) %></td>
        <td><%= link_to 'Zahodit', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% poradi=poradi+1 %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nový příspěvek', new_post_path %>
